<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeviceActivity">

    <Button
        android:id="@+id/conbut"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:background="@drawable/ic_swap_vert_black_24dp"
        android:onClick="didTapButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/conbut"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Press the icon to control your device" />

    <Button
        android:id="@+id/schmbut"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="158dp"
        android:background="@drawable/ic_date_range_black_24dp"
        android:onClick="schTapButton" />

    <TextView
        android:layout_width="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_below="@+id/schmbut"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-158dp"
        android:text="Press the icon to set calender on your device" />



</RelativeLayout>